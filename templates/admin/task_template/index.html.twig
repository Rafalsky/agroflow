{% extends 'base.html.twig' %}

{% block title %}Szablony Zadań{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold">Szablony Zadań</h1>
        <a href="{{ path('admin_task_template_new') }}" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Nowy Szablon</a>
    </div>

    <div class="bg-white shadow overflow-hidden sm:rounded-md">
        <ul role="list" class="divide-y divide-gray-200">
            {% for template in task_templates %}
                <li>
                    <div class="px-4 py-4 sm:px-6 flex items-center justify-between">
                        <div class="flex items-center">
                            <div class="flex-shrink-0 h-10 w-10 bg-gray-100 rounded-full flex items-center justify-center">
                                <span class="text-xl font-bold text-gray-600">{{ template.points }}</span>
                            </div>
                            <div class="ml-4">
                                <div class="text-lg font-medium text-blue-600 truncate">{{ template.name }}</div>
                                <div class="text-sm text-gray-500">
                                    Dzień: {{ template.weekday }} | Priorytet: {{ template.priority }} |
                                    {% if template.recurring %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">Cykliczne</span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">Jednorazowe</span>
                                    {% endif %}
                                    {% if not template.active %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">Nieaktywne</span>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="flex space-x-2">
                            <a href="{{ path('admin_task_template_edit', {'id': template.id}) }}" class="text-indigo-600 hover:text-indigo-900">Edytuj</a>
                        </div>
                    </div>
                </li>
            {% else %}
                <li class="px-4 py-4 sm:px-6 text-center text-gray-500">Brak szablonów zadań.</li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}
