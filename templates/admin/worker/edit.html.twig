{% extends 'base.html.twig' %}

{% block title %}{% if worker.id %}Edytuj{% else %}Nowy{% endif %} Pracownik{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">{% if worker.id %}Edytuj{% else %}Nowy{% endif %} Pracownik</h1>

    <div class="bg-white shadow sm:rounded-lg p-6 max-w-2xl">
        {{ form_start(form) }}
            <div class="mb-4">
                {{ form_row(form.name, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            </div>
            <div class="mb-4">
                {{ form_row(form.shortName, {'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm'}}) }}
            </div>
            <div class="mb-6">
                {{ form_row(form.active) }}
            </div>

            <div class="flex items-center justify-between">
                <button class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">Zapisz</button>
                <a href="{{ path('admin_worker_index') }}" class="text-gray-600 hover:text-gray-900">Anuluj</a>
            </div>
        {{ form_end(form) }}

        {% if worker.id %}
            <div class="mt-6 pt-6 border-t border-gray-200">
                <form method="post" action="{{ path('admin_worker_delete', {'id': worker.id}) }}" onsubmit="return confirm('Na pewno usunąć?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ worker.id) }}">
                    <button class="text-red-600 hover:text-red-900 text-sm">Usuń pracownika</button>
                </form>
            </div>
        {% endif %}
    </div>
</div>

{% endblock %}
