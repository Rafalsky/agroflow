{% extends 'base.html.twig' %}

{% block title %}Ranking Punktowy{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-amber-50 via-orange-50 to-yellow-50 py-8">
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between mb-8">
            <h1 class="text-4xl font-bold bg-gradient-to-r from-amber-700 to-orange-600 bg-clip-text text-transparent flex items-center gap-3">
                üèÜ Ranking Pracownik√≥w
            </h1>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Leaderboard Table -->
            <div class="lg:col-span-2">
                <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl overflow-hidden border-2 border-amber-200">
                    <table class="w-full text-left border-collapse">
                        <thead class="bg-gradient-to-r from-amber-100 to-orange-100">
                            <tr>
                                <th class="px-6 py-4 font-bold text-amber-800">Miejsce</th>
                                <th class="px-6 py-4 font-bold text-amber-800">Pracownik</th>
                                <th class="px-6 py-4 font-bold text-amber-800 text-right">Punkty</th>
                            </tr>
                        </thead>
                        <tbody class="divide-y divide-amber-100">
                            {% for entry in leaderboard %}
                                <tr class="hover:bg-amber-50/50 transition-colors">
                                    <td class="px-6 py-4">
                                        {% if loop.index == 1 %}
                                            <span class="text-2xl">ü•á</span>
                                        {% elseif loop.index == 2 %}
                                            <span class="text-2xl">ü•à</span>
                                        {% elseif loop.index == 3 %}
                                            <span class="text-2xl">ü•â</span>
                                        {% else %}
                                            <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-amber-50 text-amber-700 font-bold">
                                                {{ loop.index }}
                                            </span>
                                        {% endif %}
                                    </td>
                                    <td class="px-6 py-4">
                                        <div class="font-bold text-lg text-gray-800">{{ entry.name }}</div>
                                    </td>
                                    <td class="px-6 py-4 text-right">
                                        <span class="text-2xl font-black text-amber-600">
                                            {{ entry.total_amount }}
                                        </span>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3" class="px-6 py-12 text-center text-amber-600">
                                        <div class="text-6xl mb-4">üê∑</div>
                                        Brak danych w rankingu
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Recent Transactions -->
            <div class="lg:col-span-1">
                <div class="bg-white/90 backdrop-blur-sm shadow-xl rounded-2xl p-6 border-2 border-amber-200">
                    <h2 class="text-2xl font-bold text-amber-800 mb-6 flex items-center gap-2">
                        <span>üìú</span>Ostatnie Punkty
                    </h2>
                    <div class="space-y-4">
                        {% for transaction in recentTransactions %}
                            <div class="p-4 rounded-xl border-l-4 {{ transaction.amount > 0 ? 'border-green-400 bg-green-50/30' : 'border-red-400 bg-red-50/30' }}">
                                <div class="flex justify-between items-start">
                                    <div class="font-bold text-gray-800">{{ transaction.worker.shortName }}</div>
                                    <div class="font-black {{ transaction.amount > 0 ? 'text-green-600' : 'text-red-600' }}">
                                        {{ transaction.amount > 0 ? '+' : '' }}{{ transaction.amount }}
                                    </div>
                                </div>
                                <div class="text-xs text-gray-600 mt-1">{{ transaction.reason }}</div>
                                <div class="text-[10px] text-gray-400 mt-2">{{ transaction.createdAt|date('d.m.Y H:i') }}</div>
                            </div>
                        {% else %}
                            <p class="text-center text-amber-600 py-8">Brak transakcji</p>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
